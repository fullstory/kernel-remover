	fsam7400-modules-2.6.24-2.6.24.1.slh.3-sidux-686
	gspca-modules-2.6.24-2.6.24.1.slh.3-sidux-686
	kqemu-modules-2.6.24-2.6.24.1.slh.3-sidux-686
	ndiswrapper-modules-2.6.24-2.6.24.1.slh.3-sidux-686
